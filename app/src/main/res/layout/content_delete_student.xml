<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".DeleteStudentActivity"
    tools:showIn="@layout/delete_student">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp" >

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_reg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp">

            <EditText
                android:id="@+id/Stud_Reg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/registration_no"
                app:fontFamily="@font/belgrano"/>
        </android.support.design.widget.TextInputLayout>

        <Button android:id="@+id/btn_delete"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="DELETE"
            android:background="#2f42ba"
            android:layout_marginTop="40dp"
            android:textColor="@android:color/white"
            app:fontFamily="@font/belgrano"/>

        <Button android:id="@+id/btn_stdView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="View"
            android:background="#2f42ba"
            android:layout_marginTop="20dp"
            android:textColor="@android:color/white"
            app:fontFamily="@font/belgrano"/>

    </LinearLayout>

</RelativeLayout>