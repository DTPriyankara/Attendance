<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.dushyantha.attendanceapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="AttendanceApp"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".LoginMain" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <activity android:name=".AdminPanelActivity">

        </activity>

        <activity
            android:name=".AdminPanelStudentActivity"
            android:label="@string/title_activity_admin_panel_student"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".AdminPanelLectureActivity"
            android:label="@string/title_activity_admin_panel_lecture"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".AdminPanelCourseActivity"
            android:label="@string/title_activity_admin_panel_course"
            android:theme="@style/AppTheme" />

        <activity android:name=".HomeActivity">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
    </application>

</manifest>